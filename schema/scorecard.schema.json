{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LTDD Scorecard",
  "type": "object",
  "required": ["date", "ci_runs", "infra_fast_failures", "capability_failed_specs", "coverage_failures", "prs_merged_24h"],
  "properties": {
    "date": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "ci_runs": {
      "type": "integer",
      "minimum": 0
    },
    "infra_fast_failures": {
      "type": "integer",
      "minimum": 0
    },
    "capability_failed_specs": {
      "type": "integer",
      "minimum": 0
    },
    "coverage_failures": {
      "type": "integer",
      "minimum": 0
    },
    "prs_merged_24h": {
      "type": "integer",
      "minimum": 0
    },
    "waiver_expired": {
      "type": "integer",
      "minimum": 0
    },
    "source_sha": {
      "type": "string",
      "pattern": "^[0-9a-f]{40}$"
    }
  }
}
